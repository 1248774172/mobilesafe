<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ToastLocationActivity"
    android:background="#59F4F4F4">
    <Button
        android:id="@+id/toast_location_top"
        android:visibility="invisible"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_locate_blue"
        android:text="按住提示框拖拽到任意位置"
        android:textColor="#000"
        android:textSize="25sp"/>
    <ImageView
        android:id="@+id/iv_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drag"/>

    <Button
        android:id="@+id/toast_location_bottom"
        android:focusable="false"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_locate_blue"
        android:text="按住提示框拖拽到任意位置"
        android:textColor="#000"
        android:textSize="25sp"/>

</RelativeLayout>