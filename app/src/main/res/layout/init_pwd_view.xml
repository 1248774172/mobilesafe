<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title"
        android:text="初始化密码"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title"
        android:text="第一次使用手机防盗需要设置密码"
        android:padding="0dp"
        android:textSize="15sp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/met_init_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        app:met_maxCharacters="16"
        android:singleLine="true"
        android:textSize="20sp"
        android:hint="初始化密码"
        android:inputType="textPassword"
        app:met_helperTextAlwaysShown="false"
        app:met_bottomTextSize="17sp"
        android:focusableInTouchMode="true"
        app:met_clearButton="true"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/met_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        app:met_maxCharacters="16"
        android:singleLine="true"
        android:textSize="20sp"
        android:hint="确认密码"
        android:inputType="textPassword"
        app:met_helperTextAlwaysShown="false"
        app:met_bottomTextSize="17sp"
        android:focusableInTouchMode="true"
        app:met_clearButton="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_style"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="确认"
            android:textColor="#000"/>

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_style"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="取消"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>