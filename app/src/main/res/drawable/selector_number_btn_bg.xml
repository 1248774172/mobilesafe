<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/btn_green_pressed" android:state_pressed="true">
        <shape>
            <solid android:color="#FFFAFA"/>
            <corners android:topLeftRadius="10dip"
                android:topRightRadius="10dip"
                android:bottomRightRadius="10dip"
                android:bottomLeftRadius="10dip" />

            <stroke android:width="1dip"
                android:color="#000" />
            <!--边框宽度-->
            <size android:width="15dip"
                android:height="15dip" />
        </shape>
    </item>
    <item android:drawable="@drawable/btn_green_normal">
        <shape>
            <solid android:color="#FFFAFA"/>
            <corners android:topLeftRadius="10dip"
                android:topRightRadius="10dip"
                android:bottomRightRadius="10dip"
                android:bottomLeftRadius="10dip" />

            <stroke android:width="1dip"
                android:color="#000" />
            <!--边框宽度-->
            <size android:width="15dip"
                android:height="15dip" />
        </shape>
    </item>

</selector>